<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".UpdateActivity">

    <TextView
        android:id="@+id/updateMovInfo"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="✒ 영화정보 수정"
        android:textColor="#000000"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="136dp"
        android:layout_height="109dp"
        android:layout_below="@+id/updateMovInfo"
        android:layout_alignStart="@+id/updateMovInfo"
        android:layout_alignLeft="@+id/updateMovInfo"
        android:layout_marginStart="130dp"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="13dp"
        app:srcCompat="@mipmap/aladdin_image" />

    <EditText
        android:id="@+id/editTitle"
        android:layout_width="401dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_alignStart="@+id/title"
        android:layout_alignLeft="@+id/title"
        android:layout_marginStart="-1dp"
        android:layout_marginLeft="-1dp"
        android:layout_marginTop="0dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/updateMovInfo"
        android:layout_alignStart="@+id/updateMovInfo"
        android:layout_alignLeft="@+id/updateMovInfo"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="122dp"
        android:text="제목" />

    <EditText
        android:id="@+id/editGenre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/genre"
        android:layout_alignStart="@+id/updateMovInfo"
        android:layout_alignLeft="@+id/updateMovInfo"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="0dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/hero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editGenre"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dp"
        android:text="주인공" />

    <EditText
        android:id="@+id/editHero"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/hero"
        android:layout_alignStart="@+id/updateMovInfo"
        android:layout_alignLeft="@id/hero"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/director"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editHero"
        android:layout_alignStart="@+id/updateMovInfo"
        android:layout_alignLeft="@+id/updateMovInfo"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="8dp"
        android:text="감독" />

    <EditText
        android:id="@+id/editDirector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/director"
        android:layout_alignStart="@+id/updateMovInfo"
        android:layout_alignLeft="@+id/updateMovInfo"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="0dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editDirector"
        android:layout_alignStart="@+id/updateMovInfo"
        android:layout_alignLeft="@+id/updateMovInfo"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="8dp"
        android:text="평점" />

    <EditText
        android:id="@+id/editRating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rating"
        android:layout_alignStart="@+id/updateMovInfo"
        android:layout_alignLeft="@+id/updateMovInfo"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="0dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/premiere"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editRating"
        android:layout_alignStart="@+id/updateMovInfo"
        android:layout_alignLeft="@+id/updateMovInfo"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="8dp"
        android:text="개봉일" />

    <EditText
        android:id="@+id/editPremiere"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/premiere"
        android:layout_alignStart="@+id/updateMovInfo"
        android:layout_alignLeft="@+id/updateMovInfo"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="0dp"
        android:ems="10"
        android:inputType="date" />

    <Button
        android:id="@+id/btn_update"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editPremiere"
        android:layout_alignStart="@+id/editPremiere"
        android:layout_alignLeft="@+id/editPremiere"
        android:layout_marginStart="18dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="20dp"
        android:onClick="onClick"
        android:text="수정" />

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editPremiere"
        android:layout_alignEnd="@+id/editRating"
        android:layout_alignRight="@+id/editRating"
        android:layout_marginStart="33dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_toEndOf="@+id/btn_update"
        android:onClick="onClick"
        android:text="취소" />

    <TextView
        android:id="@+id/genre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTitle"
        android:layout_alignStart="@+id/updateMovInfo"
        android:layout_alignLeft="@+id/updateMovInfo"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="8dp"
        android:text="장르" />

</RelativeLayout>