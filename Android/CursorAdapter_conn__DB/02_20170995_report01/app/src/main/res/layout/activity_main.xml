<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Button
        android:id="@+id/btnOpenAllMovie"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="37dp"
        android:layout_marginLeft="37dp"
        android:layout_marginTop="160dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:background="#009688"
        android:onClick="onClick"
        android:text="전체 영화목록"
        android:textSize="24sp"
        android:textStyle="italic" />

    <Button
        android:id="@+id/btnAddNewMovie"
        android:layout_width="332dp"
        android:layout_height="100dp"
        android:layout_below="@+id/btnOpenAllMovie"
        android:layout_alignStart="@+id/btnOpenAllMovie"
        android:layout_alignLeft="@+id/btnOpenAllMovie"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="40dp"
        android:background="#009688"
        android:onClick="onClick"
        android:text="새로운 영화 추가"
        android:textSize="24sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>